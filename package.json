    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "postcss-header": "^2.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended-scss": "^4.2.0",
